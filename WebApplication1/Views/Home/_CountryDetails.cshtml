@using GlobalInformation.Domain;
@model CountryDetails

<style>

    body {
        font-family: 'Roboto', sans-serif;
        font-size: .875rem
    }

    td {
        padding: .25rem 1rem;
        border-bottom: 1px solid #f1f1f1
    }

    table {
        border-collapse: collapse;
        border: 1px solid #f1f1f1;
    }

    tr:nth-child(even) {
        background: #fafafa
    }

    td:nth-child(odd) {
        font-weight: bold;
    }

    .small {
        font-size: .685rem;
        color: orangered
    }

    svg {
        fill: orangered;
        width: 20px
    }

    a {
        cursor: pointer
    }
</style>

<div class="container mt-4">
    <h4>@Model.Name</h4>
    <table>
        <tr>
            <td>Capital</td>
            <td>@Model.Capital</td>
        </tr>
        <tr>
            <td>Population</td>
            <td>@Model.Population</td>
        </tr>
        <tr>
            <td colspan="2">Official Currencies</td>
        </tr>
        <tr>
        <tr>
            <td colspan="2">
                <ul>
                        @foreach (var currency in Model.Currencies)
                        {
                        <li>@currency</li>
                        }
                </ul>
            </td>
        </tr>

        <tr>
            <td colspan="2">Official Languages</td>
        </tr>
        <tr>
        <tr>
            <td colspan="2">
                <ul>
                            @foreach (var language in Model.Languages)
                            {
                        <li>@language</li>
                            }
                </ul>
            </td>
        </tr>

        <tr>
            <td colspan="2">Neighbouring Countries/Borders:</td>
        </tr>
        <tr>
        <tr>
            <td colspan="2">
                <ul>
                     @foreach (var border in Model.Borders)
                     {
                        <li>@border</li>
                     }
                </ul>
            </td>
        </tr>
    </table>
</div>

